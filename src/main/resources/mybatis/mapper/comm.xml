<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.security.web.sys.comm.mapper.CommMapper">
    <!-- 사용자 조회 -->
    <select id="getUser" resultType="com.security.web.sys.comm.dto.User" parameterType="com.security.web.sys.comm.dto.UserReqDTO">
        { CALL Usp_Fs_Get_Comm_User_Info (#{user_id}, #{pwd}) }
    </select>
    <!-- 사용자 조회 이메일-->
    <select id="selectUsers" resultType="com.security.web.sys.comm.dto.User" parameterType="string">
        SELECT
            ID
        ,   EMAIL
        ,   PWD
        ,   LAST_LOGIN_TIME
        ,   USER_AUTH
        ,   REGISTER_TIME
        ,   UPDATE_TIME
    FROM MEMBER
    WHERE EMAIL = #{email}
    </select>

</mapper>
